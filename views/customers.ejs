<!DOCTYPE html>
<html lang="en">
	<head>
		<% include partials/head %>
	</head>

	<body class="no-skin">
		
		<!-- /.top bar  --> 
		<% include partials/topbar %>
		
		<div class="main-container" id="main-container">
			<script type="text/javascript">
				try{ace.settings.check('main-container' , 'fixed')}catch(e){}
			</script>

			<!-- /.menu bar / side bar  --> 
			<% include partials/sidebar %>	

			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs" id="breadcrumbs">
						<script type="text/javascript">
							try{ace.settings.check('breadcrumbs' , 'fixed')}catch(e){}
						</script>

						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Dashboard</a>
							</li>
							<li class="active"> Customers Library </li>
						</ul><!-- /.breadcrumb -->

						<!-- /.nav-search -->
					</div>

					<div class="page-content">
						
						<!-- /.ace-settings-container -->

						<div class="page-header">
							<h1 class="pull-left col-xs-6">
								Customers
							</h1>
							<a class="btn btn-white btn-info btn-bold pull-right" 
								role="button" class="blue" data-toggle="modal"
								href="#addCustomerModal">

								<i class="ace-icon glyphicon glyphicon-plus bigger-80 blue"></i>
								Add New 
							</a>                        
							<div class="clearfix">
								<!--<div class="pull-right tableTools-container"></div>-->
							</div>
						</div><!-- /.page-header -->

						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->
								<div class="row">
									<div class="col-xs-12">
										<!-- div.dataTables_borderWrap -->
										<div>
											<table id="dynamic-table" class="table table-striped table-bordered table-hover">
												<thead>
													<tr>
														<th> Name </th>
														<th> Cell </th>
														<th> Email </th>
														<th> Address </th>
														<th> Contact Person </th>
														<th> Type </th>
														<th> Actions </th>
													</tr>
												</thead>
												<tbody>
													<% for(var i=0; i<customersData.length; i++) { %>
													<tr>
														<td>
															<%= customersData[i]['name']+' '+customersData[i]['second_name'] %>
														</td>
														<td>
															<%= customersData[i]['cell'] %>
														</td>
														<td>
															<%= customersData[i]['email'] %>
														</td>
														<td>
															<%= customersData[i]['address'] %>
														</td>
														<td>
															<%= customersData[i]['contact_person'] %>
														</td>
														<td>
															<%= customersData[i]['is_agent'] && "Agent" || "Individual" %>
														</td>
														<td> </td>
													</tr>
													<% } %>
												</tbody>
											</table>
										</div>
									</div>
								</div>
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->

			<div class="footer">
				<% include partials/footer %>
				<% include modals/add_customer %>
			</div>

			<a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
				<i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
			</a>

		</div><!-- /.main-container -->

		<% include partials/footerscripts %>

		<!-- page specific plugin scripts -->
		<script src="/javascripts/dataTables/jquery.dataTables.min.js"></script>
		<script src="/javascripts/dataTables/jquery.dataTables.bootstrap.min.js"></script>
		<script src="/javascripts/dataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
		<script src="/javascripts/dataTables/extensions/ColVis/js/dataTables.colVis.min.js"></script>

		<!-- inline scripts related to this page -->
		<script type="text/javascript" src="/javascripts/custom/customers.js"></script>
	</body>

